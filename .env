# Pixiv收藏下载器配置

# 必填参数
USER_ID=           # 你的Pixiv用户ID
REFRESH_TOKEN=     # 你的Pixiv刷新令牌

# 基本配置
DOWNLOAD_PATH=./downloads  # 图片保存位置
INTERVAL_MINUTES=60        # 检查间隔（分钟）
CREATE_FOLDER_FOR_MULTI=true  # 多图作品是否创建单独文件夹

# 网络配置
MIRROR_DOMAIN=i.pixiv.cat  # Pixiv镜像域名
USE_BYPASS_API=false       # 是否使用ByPassSniApi免代理模式

# 请求配置
API_INTERVAL=5             # API请求间隔（秒）
DOWNLOAD_INTERVAL=3        # 下载间隔（秒）
JITTER=1                   # 随机抖动值（秒）

# 高级配置
DEBUG_MODE=false           # 调试模式
START_AFTER=               # 从指定作品ID后开始处理(选填)

# Webhook配置
WEBHOOK_URL=               # Webhook通知地址